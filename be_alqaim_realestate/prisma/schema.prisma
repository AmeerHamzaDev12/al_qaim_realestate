generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model userAdmin {
  id             String   @id @default(uuid())
  name           String?
  email          String   @unique
  password       String   
  emailVerified  DateTime?
  otp            String?
  otpExpiry      DateTime?
  resetToken     String?     
  resetTokenExpiry  DateTime?
  authtoken      String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Customer {
  id          String   @id @default(uuid())
  name        String
  cnic        String   @unique
  phone       String
  address     String?
  plot        String
  plotSize    String?
  plotType    String?
  phase       String
  bookingDate DateTime
  totalPrice  Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  payments    customerPayments[]
}

model customerPayments{
  id          String   @id @default(uuid())
  method      String   
  date        DateTime @default(now())
  amount      Float
  receipt     String
  customerId  String
  customer    Customer @relation(fields: [customerId], references: [id])
}